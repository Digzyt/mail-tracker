
<div class="jumbotron text-center">
    <h1>Track your mail</h1>
    <h3>View incoming and outgoin mail status and location.</h3>
</div>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-primary"><%=link_to "Post Mail",new_package_path %></button>
</div>

<div class="row">
    <% @package.each do |package|%>
    <div class ="col-md-3">
        <p><%= package.destination %></p>
        <p><%= package.mail_type%></p>
        <p><%=package.sent_date%></p>
    </div>
    <% end %>
</div>