<div class="jumbotron text-center">
    <h1>Track your mail</h1>
    <h3>View incoming and outgoin mail status and location.</h3>
</div>

<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-primary"><%=link_to "Post Mail",new_package_path %></button></br>
</div>

<%= form_tag packages_path, :method => 'get', :id => 'packages_search' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="packages"><%=render 'packages'%></div>
<% end %>

</div>
