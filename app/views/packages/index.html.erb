<div class="jumbotron text-center">
    <h1>Track your mail</h1>
    <h3>View incoming and outgoing mail status and location.</h3>
</div>
<div class="col-md-10 col-md-offset-1">
  <div class="well">
    <div class="btn-group" role="group" aria-label="...">
      <%=link_to "Post Mail",new_package_path,class: "btn btn-primary" %>
    </div>
        <%= form_tag packages_path, :method => 'get', :id => 'packages_search' do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil %>
          </p>
        <%if current_user.admin?%>
          <%=render 'admin'%>%>  
        <%else%>  
          <div id="packages"><%=render 'packages'%></div>
        <%end%>
        <% end %>
    </div>
</div>