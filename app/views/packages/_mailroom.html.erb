<div class = "col-md-4 col-md-offset-4">
    <%= form_for @package do |f| %>
        <div class ="well">
        <p><%=@package.sender_name%></p>
        <p><%=@package.mail_type%></p>
        <p><%=@package.description %></p>
        <p><%=@package.mail_number%></p>
        <p><%=@package.sent_date%></p>
        <div class="field form-group">
          <%= f.label :mail_room_date %><br />
          <%= f.date_select :mail_room_date, :value=> @package.mail_room_date,  class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :mail_room_status%><br />
          <%= f.select :mail_room_status, [['Sighted','sighted'],['Missing','missing'],['Exceptions','exceptions']], class: 'form-control' %>
        </div>
            <%= f.submit "Update", class: 'btn btn-success',:method => :post %>
        <%end%>
</div>