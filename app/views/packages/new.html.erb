<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
    <h2>New Mail</h2>
      <%= form_for(@package) do |f| %>
        <div class="field form-group">
          <%= f.label :sender_name %><br />
          <%= f.text_field :sender_name, :value=> @package.sender_name,  class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :sent_date %><br />
          <%= f.date_select :sent_date, :value=> @package.sent_date,  class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :destination%><br />
          <%= f.select :destination, [['Internal','internal'],['External','external']], class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :mail_type%><br />
          <%= f.select :mail_type, [['Envelope','envelop'],['Bag','bag']], class: 'form-control' %>
        </div>
        <div class ="field field-group">
          <%= f.label :mail_number%><br/>
          <%= f.text_field :mail_number, class:'form_control'%>
        </div>
        <div class="field form-group">
          <%= f.label :description%><br />
          <%= f.text_area :description,:placeholder => "Give a brief description of the mail",  class: 'form-control' %>
        </div>
        <div class="actions form-group">
          <%= f.submit "Create", class: 'btn btn-success',:method => :post %>
        </div>
      <% end %>
     </div>
  </div>
</div>